<?xml version="1.0" encoding="utf-8"?>
<!--组合动画-->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false">
    <!--位移动画-->
    <translate
        android:fromYDelta="100%p"
        android:toYDelta="0"
        android:duration="500" />
    <!--渐变动画-->
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1.0"
        android:duration="300"/>
</set>
